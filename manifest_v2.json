{
    "name" : "peer-twitch",
    "version" : "1.0",
    "description" : "peer-twitch",
    "manifest_version": 2,
    "permissions": [
        "webRequest", 
        "https://*.hls.ttvnw.net/v1/playlist/*.m3u8",
        "https://*.twitch.tv/*"
    ],
    
    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["https://*.twitch.tv/*"],
        "js": [
            "peer_twitch.js", "run_wasm.js"
        ]
    }],
    "web_accessible_resources": [
        "peer_twitch_bg.wasm"
    ]
}
